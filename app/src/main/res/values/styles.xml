<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--item name="android:windowTranslucentStatus">true</item-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->

    </style>


    <style name="transparentRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/transparent</item>
    </style>


    <style name="orangeRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/pumpkin</item>
    </style>

    <style name="greenRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/carribeanGreen</item>
    </style>

    <style name="blueRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/spirodiscoball</item>
    </style>

    <style name="redRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/awesomepink</item>
    </style>

    <style name="progressBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/pumpkin</item>
    </style>



    <style name="green_progress" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/caribbeangreen</item>
    </style>

    <style name="buttonProgress" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/darkjunglegreen_6</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorSwitchThumbNormal">@color/switchBg</item>
        <item name="android:colorForeground">@color/switchBg</item>
    </style>

    <style name="SwitchGreen" parent="Theme.AppCompat.Light">
        <item name="colorSwitchThumbNormal">#00FFAD</item>
        <item name="android:colorForeground">#00FFAD</item>
        <item name="android:colorControlActivated">#00FFAD</item>
    </style>

    <style name="Widget.App.Spinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="overlapAnchor">true</item>
        <item name="android:background">@drawable/edit_text_style</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/carribeanGreen</item>
        <item name="textColorAlertDialogListItem">@color/carribeanGreen</item>
        <item name="colorAccent">@color/carribeanGreen</item>
        <item name="android:textColorPrimary">@color/carribeanGreen</item>
    </style>


    <style name="PickerTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/darkjunglegreen</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="DialogCustomTheme" parent="AlertDialog.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>


    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>

    </style>

    <style name="NumberPickerText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">#00FFAD</item>
    </style>


    <style name="CardNumberPickerText">
        <item name="android:textSize">20sp</item>
    </style>




</resources>